{
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 80,
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "auto",
    "plugins": ["prettier-plugin-tailwindcss", "@trivago/prettier-plugin-sort-imports"],
    "importOrder": [
      "^react$",
      "^next(.*)$",
      "<THIRD_PARTY_MODULES>",
      "^@/components/(.*)$",
      "^@/lib/(.*)$",
      "^@/hooks/(.*)$",
      "^@/types/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  }